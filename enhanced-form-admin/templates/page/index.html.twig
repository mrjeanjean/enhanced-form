{% extends 'base.html.twig' %}

{% block title %}Hello PageController!{% endblock %}

{% block body %}
    <style>
        .wrapper {
            margin: 0 auto;
            max-width: 1200px;
            width: 95%;
            font: 16px/1.5 sans-serif;
        }

        .wrapper + .wrapper{
            margin-top: 3rem;
        }

        .image-full {
            width: 100%;
            height: auto;
        }

        .block-content > *:first-child{
            margin-top: 0;
        }
    </style>


    <div class="wrapper"><h1>{{ page.title }}</h1></div>
    <div class="editor">
        {% for section in sections %}
            {{ get_section(section.type, section.content)|raw }}
        {% endfor %}
    </div>
{% endblock %}
